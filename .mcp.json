{
  "mcpServers": {
    "graphiti-local": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "--isolated",
        "--directory",
        "/home/donbr/graphiti-fastmcp",
        "src/graphiti_mcp_server.py",
        "--transport",
        "stdio",
        "--database-provider",
        "neo4j"
      ],
      "env": {
        "NEO4J_URI": "${NEO4J_URI}",
        "NEO4J_USER": "${NEO4J_USER}",
        "NEO4J_PASSWORD": "${NEO4J_PASSWORD}",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "MODEL_NAME": "${MODEL_NAME:-gpt-4.1-mini}"
      }
    }
  }
}